@{
}
@model Book

<ul class="list-group list-group-flush">
    <li class="list-group-item bg-light">
        <h5>@Model.Title</h5>
        <p>By @Model.AuthorFirstName @Model.AuthorLastName</p>
        <span>@Model.Publisher</span>
        <p>@Model.Classification, @Model.Category</p>
        <small>@Model.ISBN</small>
        <br>
        <small>@Model.Pages Pages</small>
        <p>$@Model.Price</p>
    </li>
</ul>