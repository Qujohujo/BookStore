@{
}
@model Book

<ul class="list-group list-group-flush">
    <li class="list-group-item bg-light">
        <h5>@Model.Title</h5>
        <p>By @Model.AuthorFirstName @Model.AuthorLastName</p>
        <span>@Model.Publisher</span>
        <p>@Model.Classification, @Model.Category</p>
        <small>@Model.ISBN</small>
        <br>
        <small>@Model.Pages Pages</small>
        <p>$@Model.Price</p>

        <form id="@Model.BookId" asp-page="/Purchase" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Title
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Add to Cart
                </button>
            </span>
        </form>
    </li>
</ul>