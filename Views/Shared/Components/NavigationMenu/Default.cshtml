@{
}

@model IEnumerable<string>

<!--header for the categories-->
<h5 class="pt-5">Browse by Category</h5>


<!--home button to remove category filtering-->
<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">All</a>

<!--dynamically creates a button that filters based on each distinctive category in the database as pulled from the NavigationMenyBiewComponent-->
@foreach (string category in Model)
{
    <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-category="@category"
       asp-route-pageNum="1">
        @category
    </a>
}